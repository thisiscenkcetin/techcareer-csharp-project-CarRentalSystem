    /* HERO SLIDER SECTION */
    .hero-slider-container {
        position: relative;
        width: 100vw;
        height: 100vh;
        background-image: radial-gradient(#320643, #140534);
        overflow: hidden;
        margin: 0;
        padding: 0;
    }

    /* HEADER */
    .header {
        position: absolute;
        top: 0;
        width: 100%;
        z-index: 1111;
        padding: 12px 30px;
        display: flex;
        align-items: center;
        justify-content: space-between;
        gap: 20px;
    }

    .header-nav {
        display: flex;
        align-items: center;
        gap: 18px;
        flex: 1;
    }

    .nav-left {
        justify-content: flex-start;
    }

    .nav-right {
        justify-content: flex-end;
    }

    .header .logo-wrap {
        display: flex;
        justify-content: center;
        align-items: center;
        flex: 0 0 auto;
    }

    .header .logo {
        width: 58px;
        height: 58px;
        display: inline-block;
    }

    .header ul {
        padding: 0;
        margin: 0;
        list-style: none;
        display: flex;
        gap: 16px;
    }

    .header li {
        display: inline-block;
        font-size: 14px;
        font-weight: 600;
        letter-spacing: 0.4px;
        color: white;
        cursor: pointer;
        transition: color 0.3s ease, opacity 0.3s ease;
    }

    .header li:hover {
        color: var(--secondary-color);
    }

    #slide {
        position: relative;
        width: 100%;
        height: 100%;
    }

    #slide .item {
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        z-index: 1;
    }

    #slide .item .image {
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 75%;
        text-align: center;
        display: flex;
        justify-content: center;
        align-items: flex-end;
        opacity: 0;
        transform: scale(3);
        transition: 1.5s;
    }

    #slide .item .image img {
        width: 82%;
        max-width: 1100px;
        max-height: 620px;
        object-fit: contain;
        transition: 0.5s;
    }

    /* Make the first slide image (img2.png) smaller so it doesn't dominate the viewport */
    #slide .item:nth-child(1) .image img {
        width: 30%;
        max-width: 360px;
        max-height: 300px;
        transform: translateY(-8%);
    }

    #slide .item .image::before {
        position: absolute;
        bottom: -30px;
        height: 60px;
        width: 60%;
        background-color: #000;
        content: '';
        z-index: -1;
        border-radius: 50%;
        filter: blur(30px);
    }

    #slide .item .image img:hover {
        transform: scale(1.1);
    }

    /* Enlarge the second slide image (img1.png) and move it slightly upward */
    #slide .item:nth-child(2) .image img {
        /* increase visible size without affecting other slides */
        width: 92%;
        max-width: 1200px;
        max-height: 700px;
        transform: translateY(-6%);
    }

    /* Preserve the upward offset on hover and add scale */
    #slide .item:nth-child(2) .image img:hover {
        transform: translateY(-6%) scale(1.12);
    }

    .slider-content .left {
        position: absolute;
        left: 60px;
        top: 22%;
        display: none;
        color: white;
        z-index: 10;
        max-width: 420px;
    }

    .slider-content .left h1 {
        font-size: 3.5rem;
        font-weight: 500;
        margin-bottom: 10px;
        text-shadow: 3px 3px 10px rgba(0, 0, 0, 0.7);
    }

    .slider-content .left .des {
        font-size: 0.95rem;
        font-weight: 100;
        opacity: 0.7;
        margin-bottom: 20px;
        line-height: 1.6;
    }

    .slider-content .left button {
        font-size: 0.9rem;
        background: linear-gradient(135deg, var(--secondary-color) 0%, #c82333 100%);
        border: none;
        color: #fff;
        padding: 10px 25px;
        border-radius: 8px;
        cursor: pointer;
        font-weight: 500;
    }

    .slider-content .left button:hover {
        transform: translateY(-2px);
        box-shadow: 0 5px 15px rgba(220, 53, 69, 0.4);
    }

    .slider-content .left button i:nth-child(1) {
        margin-left: 10px;
    }

    .slider-content .right {
        position: absolute;
        right: 60px;
        top: 30%;
        display: none;
        color: white;
        z-index: 10;
        max-width: 320px;
        text-align: left;
    }

    .slider-content .right h2 {
        font-size: 1.5rem;
        font-weight: 500;
        margin-bottom: 20px;
        color: var(--secondary-color);
        text-shadow: 2px 2px 6px rgba(0, 0, 0, 0.5);
    }

    /* Align the AVANTAJLAR block with the left heading on the second slide */
    #slide .item:nth-child(2) .slider-content .right {
        /* match the left heading vertical position (left top is 22%) */
        top: 22%;
    }

    #slide .item:nth-child(2) .right h2 {
        transform: translateY(0);
        margin-bottom: 12px;
    }

    .slider-content .right ul {
        padding: 0;
        margin: 0;
        list-style: none;
    }

    .slider-content .right li {
        font-size: 0.85rem;
        position: relative;
        margin-top: 20px;
        padding-left: 40px;
    }

    .slider-content .right li::before {
        position: absolute;
        left: 0;
        top: 50%;
        transform: translate(0, -50%);
        width: 8px;
        height: 8px;
        background-color: #8C0781;
        content: '';
        border-radius: 50%;
        box-shadow: 0 0 10px #8C0781;
    }

    .slider-content .right li p:nth-child(1) {
        font-weight: 500;
        padding: 0;
        margin: 0;
        font-size: 0.75rem;
        opacity: 0.6;
    }

    .slider-content .right li p:nth-child(2) {
        font-weight: 500;
        padding: 0;
        margin: 0;
        font-size: 0.95rem;
    }

    .directional {
        position: absolute;
        right: 24px;
        bottom: 24px;
        z-index: 4;
        display: flex;
        gap: 8px;
    }

    .directional button {
        width: 36px;
        height: 36px;
        color: #fff;
        background-color: rgba(0, 0, 0, 0.35);
        border: 1px solid rgba(255, 255, 255, 0.25);
        opacity: 0.9;
        border-radius: 10px;
        cursor: pointer;
        transition: all 0.25s ease;
        display: inline-flex;
        align-items: center;
        justify-content: center;
    }

    .directional button:hover {
        opacity: 1;
        background-color: rgba(220, 53, 69, 0.9);
        border-color: rgba(220, 53, 69, 0.9);
        transform: translateY(-2px);
    }

    #slide .item:nth-child(1) .image {
        opacity: 0;
        transform: scale(0) translate(-100px);
    }

    #slide .item:nth-child(2) .image {
        opacity: 1;
        /* Nudge the second slide (img1.png) slightly toward center */
        transform: scale(1) translateY(-1%);
    }

    #slide .item:nth-child(2) {
        z-index: 3;
    }

    @@keyframes contentOut {
        from {
            opacity: 1;
            transform: translate(0, 0);
        }
        to {
            opacity: 0;
            transform: translate(0, -100%);
            filter: blur(33px);
        }
    }

    @@keyframes contentIn {
        from {
            opacity: 0;
            transform: translate(0, 100%);
            filter: blur(33px);
        }
        to {
            opacity: 1;
            transform: translate(0, 0);
        }
    }

    #slide .item:nth-child(1) .left,
    #slide .item:nth-child(1) .right,
    #slide .item:nth-child(2) .left,
    #slide .item:nth-child(2) .right {
        display: block;
    }

    /* Hide large slider headings on wider screens to use the compact logo caption */
    /* (removed - reverted to previous layout) */

    #slide .item:nth-child(1) .left,
    #slide .item:nth-child(1) .right {
        animation: contentOut 1s ease-in-out 1 forwards;
    }

    #slide .item:nth-child(2) .left,
    #slide .item:nth-child(2) .right {
        animation: contentIn 1s ease-in-out 1 forwards;
    }

    /* SEARCH FILTER SECTION */
    /* GLASS MORPHISM SEARCH SECTION - Apple Vision Style */
    .search-section {
        background: transparent;
        backdrop-filter: none;
        -webkit-backdrop-filter: none;
        padding: 24px 18px;
        border-radius: 26px;
        box-shadow: none;
        border: none;
        position: absolute;
        bottom: 38px;
        left: 50%;
        transform: translateX(-50%);
        width: 96%;
        max-width: 1200px;
        z-index: 500;
        animation: slideInUp 0.7s cubic-bezier(0.34, 1.56, 0.64, 1);
    }

    .hero-slider-container {
        position: relative;
    }

    @@keyframes slideInUp {
        from {
            opacity: 0;
            transform: translateY(20px);
        }
        to {
            opacity: 1;
            transform: translateY(0);
        }
    }

    .search-section h3 {
        color: #ffffff;
        margin-bottom: 14px;
        font-weight: 800;
        font-size: 1.35rem;
        text-align: left;
        letter-spacing: 0.8px;
    }

    .date-input {
        border: 1px solid rgba(255, 255, 255, 0.35);
        border-radius: 14px;
        padding: 12px 14px;
        font-size: 0.97rem;
        background: rgba(255, 255, 255, 0.78);
        backdrop-filter: blur(12px);
        -webkit-backdrop-filter: blur(12px);
        color: #2c0e44;
        height: 54px;
        transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
    }

    .date-input:hover {
        border-color: rgba(220, 53, 69, 0.28);
        background: rgba(255, 255, 255, 0.92);
        box-shadow: 0 6px 18px rgba(20, 16, 60, 0.14);
    }

    .date-input:focus {
        border-color: rgba(220, 53, 69, 0.6);
        box-shadow: 0 0 0 3px rgba(220, 53, 69, 0.1), 0 8px 22px rgba(20, 16, 60, 0.16);
        background: rgba(255, 255, 255, 0.98);
        outline: none;
    }

    .search-section .form-label {
        font-weight: 600;
        color: #ffffff;
        margin-bottom: 6px;
        font-size: 0.85rem;
        opacity: 0.95;
    }

    .btn-primary {
        background: linear-gradient(135deg, var(--secondary-color) 0%, #c82333 100%);
        border: none;
        transition: all 0.3s ease;
        font-weight: 600;
        box-shadow: 0 4px 12px rgba(220, 53, 69, 0.3);
    }

    .btn-primary:hover {
        transform: translateY(-2px);
        box-shadow: 0 6px 16px rgba(220, 53, 69, 0.4);
    }

    .search-section .btn-primary {
        background: linear-gradient(135deg, #dc3545 0%, #c82333 100%);
        border: 1px solid rgba(255, 255, 255, 0.2);
        padding: 12px 24px;
        border-radius: 12px;
        font-weight: 600;
        font-size: 0.95rem;
        box-shadow: 0 4px 16px rgba(220, 53, 69, 0.3);
        transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
    }

    .search-section .btn-primary {
        background: linear-gradient(135deg, #dc3545 0%, #c82333 100%);
        border: 1px solid rgba(255, 255, 255, 0.25);
        padding: 14px 24px;
        border-radius: 14px;
        font-weight: 700;
        font-size: 0.97rem;
        box-shadow: 0 10px 26px rgba(220, 53, 69, 0.32);
        transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
        height: 54px;
    }

    .search-section .btn-primary:hover {
        transform: translateY(-3px);
        box-shadow: 0 12px 28px rgba(220, 53, 69, 0.45);
    }

    .search-section .row {
        gap: 14px;
        align-items: flex-end;
    }

    .search-section .col-md-5 {
        flex: 1;
    }

    .search-section .col-md-2 {
        display: flex;
        align-items: flex-end;
    }

    /* Reduced spacer so the cars grid sits closer to the slider */
    .search-section-spacer {
        height: 36px;
        background: transparent;
    }
        padding: 12px 40px;
        font-weight: 600;
        border-radius: 8px;
    }

    .btn-primary:hover {
        background: linear-gradient(135deg, #c82333 0%, var(--secondary-color) 100%);
        transform: translateY(-2px);
        box-shadow: 0 8px 20px rgba(220, 53, 69, 0.3);
    }

    /* CAR CARDS SECTION */
    .cars-section {
        padding: 20px 0;
    }

    .cars-section h2 {
        color: var(--primary-color);
        margin-bottom: 40px;
        font-weight: 700;
        text-align: center;
    }

    .car-card {
        background: white;
        border-radius: 12px;
        overflow: hidden;
        box-shadow: 0 4px 15px rgba(0, 0, 0, 0.1);
        height: 100%;
        display: flex;
        flex-direction: column;
    }

    .car-card:hover {
        transform: translateY(-10px);
        box-shadow: 0 12px 30px rgba(220, 53, 69, 0.2);
    }

    .car-image {
        width: 100%;
        height: 250px;
        object-fit: cover;
        background: linear-gradient(135deg, #f0f0f0 0%, #e0e0e0 100%);
    }

    .car-body {
        padding: 25px;
        flex: 1;
        display: flex;
        flex-direction: column;
    }

    .car-category {
        display: inline-block;
        background: var(--secondary-color);
        color: white;
        padding: 5px 12px;
        border-radius: 20px;
        font-size: 0.8rem;
        font-weight: 600;
        margin-bottom: 12px;
        width: fit-content;
    }

    .car-model {
        font-size: 1.3rem;
        font-weight: 700;
        color: var(--primary-color);
        margin-bottom: 15px;
    }

    .car-plate {
        color: #666;
        font-size: 0.95rem;
        margin-bottom: 15px;
        font-family: monospace;
    }

    .car-price {
        font-size: 1.8rem;
        color: var(--secondary-color);
        font-weight: 700;
        margin-bottom: 15px;
    }

    .price-per-day {
        font-size: 0.9rem;
        color: #888;
        margin-top: -10px;
        margin-bottom: 20px;
    }

    .car-footer {
        margin-top: auto;
    }

    .btn-rent {
        width: 100%;
        background: linear-gradient(135deg, var(--secondary-color) 0%, #c82333 100%);
        color: white;
        border: none;
        padding: 12px;
        border-radius: 8px;
        font-weight: 600;
        cursor: pointer;
    }

    .btn-rent:hover {
        background: linear-gradient(135deg, #c82333 0%, var(--secondary-color) 100%);
    }

    /* MODAL STYLING */
    .modal-content {
        border: none;
        border-radius: 12px;
        box-shadow: 0 10px 40px rgba(0, 0, 0, 0.2);
    }

    .modal-header {
