<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>

<script>
    // Initialize date inputs with today's date
    document.addEventListener('DOMContentLoaded', function () {
        const today = new Date().toISOString().split('T')[0];
        const tomorrow = new Date(Date.now() + 86400000).toISOString().split('T')[0];
        
        document.getElementById('startDate').value = today;
        document.getElementById('endDate').value = tomorrow;
        document.getElementById('modalStartDate').value = today;
        document.getElementById('modalEndDate').value = tomorrow;

        // Load report data
        loadReport();

        // Rent buttons event listeners
        document.querySelectorAll('.btn-rent').forEach(btn => {
            btn.addEventListener('click', function () {
                const plaka = this.dataset.plaka;
                const model = this.dataset.model;
                const price = this.dataset.price;
                openReservationModal(plaka, model);
            });
        });

        // Search button
        document.getElementById('searchBtn').addEventListener('click', searchCars);

        // Reservation form submit
        document.getElementById('reservationForm').addEventListener('submit', submitReservation);

        // Update price when dates change in modal
        document.getElementById('modalStartDate').addEventListener('change', updateModalPrice);
        document.getElementById('modalEndDate').addEventListener('change', updateModalPrice);
    });

    function openReservationModal(plaka, model) {
        document.getElementById('modalPlaka').value = plaka;
        document.getElementById('carModel').value = model;
        document.getElementById('modalTitle').textContent = model + ' - Rezervasyon';

        const today = new Date().toISOString().split('T')[0];
        const tomorrow = new Date(Date.now() + 86400000).toISOString().split('T')[0];
        
        document.getElementById('modalStartDate').value = today;
        document.getElementById('modalEndDate').value = tomorrow;

        updateModalPrice();
        
        const modal = new bootstrap.Modal(document.getElementById('reservationModal'));
        modal.show();
    }

    async function updateModalPrice() {
        const plaka = document.getElementById('modalPlaka').value;
        const startDate = document.getElementById('modalStartDate').value;
        const endDate = document.getElementById('modalEndDate').value;

        if (!plaka || !startDate || !endDate) {
            document.getElementById('totalPrice').textContent = '₺0.00';
            return;
        }

        if (new Date(startDate) >= new Date(endDate)) {
            document.getElementById('totalPrice').textContent = '₺0.00';
            return;
        }

        try {
            const response = await fetch('/Home/CalculatePrice', {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/x-www-form-urlencoded',
                },
                body: `plaka=${encodeURIComponent(plaka)}&startDate=${encodeURIComponent(startDate)}&endDate=${encodeURIComponent(endDate)}`
            });

            if (response.ok) {
                const data = await response.json();
                if (data.success) {
                    document.getElementById('totalPrice').textContent = '₺' + data.price.toFixed(2);
                }
            }
        } catch (error) {
            console.error('Fiyat hesaplama hatası:', error);
        }
    }

    async function submitReservation(e) {
        e.preventDefault();

        const customerName = document.getElementById('customerName').value;
        const plaka = document.getElementById('modalPlaka').value;
        const startDate = document.getElementById('modalStartDate').value;
        const endDate = document.getElementById('modalEndDate').value;

        if (!customerName || !plaka || !startDate || !endDate) {
            showAlert('Lütfen tüm alanları doldurun', 'danger');
            return;
        }

        try {
            const response = await fetch('/Home/BookCar', {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/x-www-form-urlencoded',
                },
                body: `musteri=${encodeURIComponent(customerName)}&plaka=${encodeURIComponent(plaka)}&startDate=${encodeURIComponent(startDate)}&endDate=${encodeURIComponent(endDate)}`
            });

            const data = await response.json();

            if (data.success) {
                showAlert(data.message, 'success');
                setTimeout(() => {
                    bootstrap.Modal.getInstance(document.getElementById('reservationModal')).hide();
                    document.getElementById('reservationForm').reset();
                    loadReport();
                }, 2000);
            } else {
                showAlert(data.message, 'danger');
            }
        } catch (error) {
            showAlert('Bir hata oluştu: ' + error.message, 'danger');
            console.error('Rezervasyon hatası:', error);
        }
    }

    async function searchCars() {
        const startDate = document.getElementById('startDate').value;
        const endDate = document.getElementById('endDate').value;

        if (!startDate || !endDate) {
            showAlert('Lütfen başlangıç ve bitiş tarihlerini seçin', 'danger');
            return;
        }

        if (new Date(startDate) >= new Date(endDate)) {
            showAlert('Bitiş tarihi başlangıç tarihinden sonra olmalıdır', 'danger');
            return;
        }

        const searchBtn = document.getElementById('searchBtn');
        const searchBtnText = document.getElementById('searchBtnText');
        const searchSpinner = document.getElementById('searchSpinner');

        searchBtn.disabled = true;
        searchBtnText.style.display = 'none';
        searchSpinner.style.display = 'inline-block';

        try {
            const response = await fetch('/Home/CheckAvailability', {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/x-www-form-urlencoded',
                },
                body: `startDate=${encodeURIComponent(startDate)}&endDate=${encodeURIComponent(endDate)}`
            });

            const data = await response.json();

            if (data.success) {
                updateCarsGrid(data.cars, startDate, endDate);
            } else {
                showAlert(data.message, 'danger');
            }
        } catch (error) {
            showAlert('Arama sırasında hata oluştu: ' + error.message, 'danger');
            console.error('Arama hatası:', error);
        } finally {
            searchBtn.disabled = false;
            searchBtnText.style.display = 'inline';
            searchSpinner.style.display = 'none';
        }
    }

    function updateCarsGrid(cars, startDate, endDate) {
        const grid = document.getElementById('carsGrid');
        grid.innerHTML = '';

        function getImageForModel(model, providedUrl) {
            if (providedUrl) return providedUrl;
            const q = encodeURIComponent(model || 'car');
            return `https://source.unsplash.com/800x600/?${q}`;
        }

        if (cars.length === 0) {
            grid.innerHTML = '<div class="col-12 no-cars"><h4>Bu tarih aralığında müsait araç bulunmamaktadır</h4></div>';
            return;
        }

        cars.forEach(car => {
            const card = document.createElement('div');
            card.className = 'col-md-6 col-lg-4';
            const imageUrl = getImageForModel(car.markaModel, car.gorselUrl);
            card.innerHTML = `
                <div class="car-card">
                    <img src="${imageUrl}" alt="${car.markaModel}" class="car-image" onerror="this.src='https://source.unsplash.com/800x600/?car'">
                    <div class="car-body">
                        <span class="car-category">${car.kategori}</span>
                        <div class="car-model">${car.markaModel}</div>
                        <div class="car-plate">🔑 ${car.plaka}</div>
                        <div class="car-price">₺${car.gunlukFiyat.toFixed(2)}</div>
                        <div class="price-per-day">/ gün</div>
                        <div class="car-footer">
                            <button class="btn-rent" data-plaka="${car.plaka}" data-model="${car.markaModel}" data-price="${car.gunlukFiyat}">
                                Hemen Kirala
                            </button>
                        </div>
                    </div>
                </div>
            `;
            grid.appendChild(card);

            // Add event listener to the new button
            card.querySelector('.btn-rent').addEventListener('click', function () {
                openReservationModal(this.dataset.plaka, this.dataset.model);
            });
        });
    }

    async function loadReport() {
        try {
            const response = await fetch('/Home/GetReport');
            const data = await response.json();

            if (data.success) {
                document.getElementById('totalIncome').textContent = data.totalIncome.toFixed(2);
                document.getElementById('topCar').textContent = data.topCar || '-';
                document.getElementById('totalBookings').textContent = data.totalBookings;
            }
        } catch (error) {
            console.error('Rapor yükleme hatası:', error);
        }
    }

    function showAlert(message, type) {
        const alertContainer = document.getElementById('alertContainer');
        const alertDiv = document.createElement('div');
        alertDiv.className = `alert alert-${type} alert-dismissible fade show`;
        alertDiv.innerHTML = `
            ${message}
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        `;
        alertContainer.appendChild(alertDiv);

        setTimeout(() => {
            alertDiv.remove();
        }, 5000);
    }

    // ==================== HERO SLIDER FUNCTIONALITY ====================
    document.getElementById('next').onclick = function () {
        let lists = document.querySelectorAll('.item');
        document.getElementById('slide').appendChild(lists[0]);
    }

    document.getElementById('prev').onclick = function () {
        let lists = document.querySelectorAll('.item');
        document.getElementById('slide').prepend(lists[lists.length - 1]);
    }

    // Auto-slide every 5 seconds
    setInterval(function () {
        document.getElementById('next').click();
    }, 5000);

    // Show contact modal with alert and autoplaying (muted) YouTube short
    function showContactModal() {
        try {
            alert('Kurabiye var, simit var lan! Neye bakıyon...');
        } catch (e) {
            // ignore
        }
        const iframe = document.getElementById('contactVideo');
        // YouTube embed for the provided short id, autoplay muted so browsers allow playback
        iframe.src = 'https://www.youtube.com/embed/z1v3RDJEtxo?autoplay=1&mute=1&rel=0';
        const modalEl = document.getElementById('contactModal');
        const modal = new bootstrap.Modal(modalEl);
        modal.show();

        // Clear src when modal is hidden to stop playback
        modalEl.addEventListener('hidden.bs.modal', function () {
            iframe.src = '';
        }, { once: true });
    }
</script>
