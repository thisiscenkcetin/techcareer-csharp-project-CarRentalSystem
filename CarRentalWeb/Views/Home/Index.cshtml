        }

        #slide .item .image {
            height: 75%;
        }

        #slide .item .image img {
            width: 85%;
            max-height: 500px;
        }

        .search-section {
            position: absolute;
            bottom: 24px;
            width: 95% !important;
            padding: 26px 18px;
